<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/close_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_close_black_24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="20dp"
                    android:layout_centerHorizontal="true"
                    android:text="Surat"
                    android:textSize="16dp"
                    android:textColor="@color/outerSpace"
                    app:fontFamily="@font/ubuntu_medium"/>

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGray"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/h1_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="52dp"
                        app:fontFamily="@font/ubuntu_bold"
                        android:textColor="@color/outerSpace"
                        android:text="Pilih Surat"
                        android:textSize="28dp"/>

                    <RelativeLayout
                        android:id="@+id/selected_surat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/h1_text"
                        android:visibility="gone">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="21dp">

                            <TextView
                                android:id="@+id/selected_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textSize="20dp"
                                android:textColor="@color/quickSilver"
                                android:text="al-Fatihah"/>

                            <ImageView
                                android:id="@+id/option_img"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginRight="16dp"
                                android:layout_alignParentRight="true"
                                android:alpha="0.5"
                                android:src="@drawable/ic_option_check"/>

                        </RelativeLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/gainsboro"/>

                    </RelativeLayout>

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/surat_dialog_shimmer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/selected_surat">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="22dp">

                                <ImageView
                                    android:layout_width="88dp"
                                    android:layout_height="23dp"
                                    android:layout_centerVertical="true"
                                    android:background="@color/gainsboro"/>

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/circle"/>

                            </RelativeLayout>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="25dp"
                                android:background="@color/gainsboro"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="22dp">

                                <ImageView
                                    android:layout_width="88dp"
                                    android:layout_height="23dp"
                                    android:layout_centerVertical="true"
                                    android:background="@color/gainsboro"/>

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/circle"/>

                            </RelativeLayout>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="25dp"
                                android:background="@color/gainsboro"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="22dp">

                                <ImageView
                                    android:layout_width="88dp"
                                    android:layout_height="23dp"
                                    android:layout_centerVertical="true"
                                    android:background="@color/gainsboro"/>

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/circle"/>

                            </RelativeLayout>

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="25dp"
                                android:background="@color/gainsboro"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="22dp">

                                <ImageView
                                    android:layout_width="88dp"
                                    android:layout_height="23dp"
                                    android:layout_centerVertical="true"
                                    android:background="@color/gainsboro"/>

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/circle"/>

                            </RelativeLayout>

                        </LinearLayout>
                    </com.facebook.shimmer.ShimmerFrameLayout>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/surat_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="310dp"
                        android:layout_below="@+id/selected_surat"
                        android:nestedScrollingEnabled="false"
                        android:clipToPadding="false"
                        android:clickable="true"
                        android:focusable="true"
                        android:visibility="gone">

                    </android.support.v7.widget.RecyclerView>

                </RelativeLayout>
            </ScrollView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightGray"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:id="@+id/hapus_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_centerVertical="true"
                    android:text="Bersihkan"
                    android:textSize="16dp"
                    android:textColor="@color/outerSpace"
                    app:fontFamily="@font/ubuntu_medium"/>

                <RelativeLayout
                    android:id="@+id/simpan_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginRight="24dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shape_radius_8">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/white"
                        android:text="Tampilkan"
                        android:textSize="16dp"
                        app:fontFamily="@font/ubuntu_bold"/>

                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>