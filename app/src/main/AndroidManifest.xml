<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bonoworksdesign.tafsiribnukatsir">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".GlobalVar"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.bonoworksdesign.tafsiribnukatsir.MainActivity"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".SplashScreen"
            android:screenOrientation="nosensor"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Search" android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateVisible"/>
        <activity android:name=".SubTopics" android:screenOrientation="nosensor"/>
        <activity android:name=".ViewTafsir" android:screenOrientation="nosensor"/>
        <activity android:name=".ListSurat" android:screenOrientation="nosensor"/>
        <activity android:name=".ListLastRead" android:screenOrientation="nosensor"/>
        <activity android:name=".Help" android:screenOrientation="nosensor"/>
        <activity android:name=".SearchHelp" android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateVisible"/>
        <activity android:name=".FailureActivity" android:screenOrientation="nosensor"/>
        <activity android:name=".ViewHelp" android:screenOrientation="nosensor"/>
        <activity android:name=".PengantarSubTopics" android:screenOrientation="nosensor"/>
        <activity android:name=".ViewPengantar" android:screenOrientation="nosensor"/>
        <activity android:name=".SearchPengantar" android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateVisible"/>
    </application>

</manifest>